{
	"compilerOptions": {
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"target": "ESNext",
		"module": "NodeNext",
		"outDir": "dist"
	},
	"exclude": ["node_modules"]
}
